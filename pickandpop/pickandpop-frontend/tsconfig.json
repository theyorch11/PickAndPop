{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
	"paths": {
      "@app/*": ["app/*"],
      "@environments/*": ["environments/*"],
      "@jnum-core/*": ["app/jnum-core/*"],
      "@dynamic-form/*": ["app/dynamic-form/*"],
      "@generated/*": ["app/generated/*"],
      "@customized/*": ["app/customized/*"]
    }    
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}